{
  "clearMocks": true,
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/certs/",
    "/coverage/",
    "/dist/",
    "/fixtures/",
    "/load_tests/",
    "/sql"
  ],
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "moduleNameMapper": {
    "@ffts": "<rootDir>/$1"
  },
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}